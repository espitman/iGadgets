<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:fontFamily="@font/vazirmatn"
    android:padding="16dp">

    <!-- Left: Clock -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextClock
            android:id="@+id/clock_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="HH"
            android:format24Hour="HH"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="@font/vazirmatn_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#88FFFFFF"
            android:textSize="40sp"
            android:fontFamily="@font/vazirmatn_bold" />

        <TextClock
            android:id="@+id/clock_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="mm"
            android:format24Hour="mm"
            android:textColor="#44ABFF"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="@font/vazirmatn_bold" />
    </LinearLayout>

    <!-- Spacer -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Right: Dates -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <ImageView
            android:id="@+id/jalali_date_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="تاریخ شمسی" />

        <TextClock
            android:id="@+id/gregorian_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="MMM d, yyyy"
            android:format24Hour="MMM d, yyyy"
            android:textColor="#88FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/vazirmatn_regular" />
    </LinearLayout>

</LinearLayout>
